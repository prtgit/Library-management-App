<br/>
<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Building</th>
      <th>Status</th>
      <th>Size</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.building %></td>
        <td><%= room.status %></td>
        <td><%= room.size %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Status for today', "/rooms/schedule_room/#{room.id}" %></td>
        <% if logged_in_as_admin? %>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= button_to 'Destroy', room, method: :delete,'data-no-turbolink' => true, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

