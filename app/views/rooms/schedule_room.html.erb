<p id="notice"><%= notice %></p>
<%if @bookingsWeek.count == 0%>
    <b>This room is available at all times today. Go ahead and book!!</b>
 <%else%>
<table class="table table-striped">
  <thead>
  <tr>
    <% @bookingsWeek.each do |booking| %>
    <th><%=(booking.booking.strftime("%H:%M"))%> - <%=(booking.booking + 2.hours).strftime("%H:%M")%></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
      <tr>
        <% @bookingsWeek.each do |booking| %>
        <td>Booked</td>
            <% end %>
      </tr>
  </tbody>
</table>
<%end%>
<br>

