<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Booking</th>
      <th>User</th>
      <th>Room</th>
      <th>Cancelled by</th>
      <th>Cancelled</th>
      <th>Booked by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.booking %></td>
        <td><%= booking.user.name %></td>
        <td><%= booking.room.number %></td>
        <td><%= booking.cancelled_by %></td>
        <td><%= booking.cancelled %></td>
        <td><%= booking.booked_by %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

