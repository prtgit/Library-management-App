<br/>
<% provide(:title, "User search") %>
<%= render 'users/users_common' %>
<div>
<p>
	<%= render 'users/user_search_box' %>
</p>
Displaying search results for "<%= @query %>"
<ul>
  <table class="table table-striped">
	<thead>
	  <tr>
		<th>Member name</th>
		<th>email</th>
		<th>Booking History</th>
		<th>Update member</th>
		<th colspan="3"></th>
	  </tr>
	</thead>


	<tbody>
<% @users.each do |user| %>
		<tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <!--<td>%= button_to "Booking history", "history", method: :get %></td>-->
      <td><%= link_to 'Booking History', "/users/booking_history/#{user.id}" %></td>
	  <td><%= button_to 'Update Member' ,edit_user_path(user), method: :get %></td>
		</tr>
<% end %>
	</tbody>
  </table>
</ul>
</div>
